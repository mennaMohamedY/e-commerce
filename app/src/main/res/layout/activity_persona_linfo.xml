<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profileinfo.PersonaLInfoActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_back"
            android:padding="12dp"
            android:id="@+id/backk" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/signature"
            android:padding="12dp"
            android:id="@+id/route_signature" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/route_signature"
            android:text="Welcome, Menna Yousef"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="19sp"
            android:id="@+id/welcom_name"
            android:layout_margin="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcom_name"
            android:text="menna.yousef@yaho.com"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:id="@+id/email"
            android:layout_margin="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:text="Your full name"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_marginTop="34dp"
            android:layout_marginHorizontal="9dp"
            android:id="@+id/Your_fullname_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Your_fullname_txt"
            android:background="@drawable/rounded_colored_borders"
            android:padding="12dp"
            android:layout_margin="9dp"
            android:text="Menna Mohamed Yousef"
            android:id="@+id/fullName"
            android:drawableEnd="@drawable/ic_baseline_edit_24"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullName"
            android:text="Your email"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="9dp"
            android:id="@+id/Your_email_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Your_email_txt"
            android:background="@drawable/rounded_colored_borders"
            android:padding="12dp"
            android:layout_margin="9dp"
            android:text="Menna Mohamed Yousef"
            android:id="@+id/your_email"
            android:drawableEnd="@drawable/ic_baseline_edit_24"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_email"
            android:text="Your Password"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="9dp"
            android:id="@+id/Your_password_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Your_password_txt"
            android:background="@drawable/rounded_colored_borders"
            android:padding="12dp"
            android:layout_margin="9dp"
            android:text="Menna Mohamed Yousef"
            android:id="@+id/your_password"
            android:drawableEnd="@drawable/ic_baseline_edit_24"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_password"
            android:text="Your Mobile Number"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="9dp"
            android:id="@+id/Your_mobileNumber_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Your_mobileNumber_txt"
            android:background="@drawable/rounded_colored_borders"
            android:padding="12dp"
            android:layout_margin="9dp"
            android:text="Menna Mohamed Yousef"
            android:id="@+id/mobile_number"
            android:drawableEnd="@drawable/ic_baseline_edit_24"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mobile_number"
            android:text="Your address"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="9dp"
            android:id="@+id/Your_address_txt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Your_address_txt"
            android:background="@drawable/rounded_colored_borders"
            android:padding="12dp"
            android:layout_margin="9dp"
            android:text="Menna Mohamed Yousef"
            android:id="@+id/address"
            android:drawableEnd="@drawable/ic_baseline_edit_24"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>