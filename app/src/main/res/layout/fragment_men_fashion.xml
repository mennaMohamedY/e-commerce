<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MenFashionFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Men's Fashion"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_margin="9dp"
            android:id="@+id/category_fashion" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/category_fashion"
            android:src="@drawable/mfashion1"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="7dp"
            android:id="@+id/header_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapableImg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/category_fashion"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_marginHorizontal="12dp"
            android:background="#65EFEFEF"
            android:layout_marginVertical="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Men's \nfashion"
            android:textColor="#01305E"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="@id/header_image"
            app:layout_constraintStart_toStartOf="@id/header_image"
            android:id="@+id/catg_fashion_txt" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/header_image"
            app:layout_constraintStart_toStartOf="@id/catg_fashion_txt"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/round_borders"
            android:backgroundTint="@color/blue"
            android:text="shop now"
            android:textColor="@color/white"
            android:paddingHorizontal="19dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/detailed_fashion_items_rv"
            android:padding="15dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>