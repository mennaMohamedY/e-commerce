<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/rounded_colored_borders">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="115dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/shapeableImg_court"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:strokeColor="#0362C1"
            app:strokeWidth="1dp"
            android:scaleType="centerCrop" />
        <!--
         <ImageView
             android:layout_width="115dp"
             android:layout_height="125dp"
             app:layout_constraintStart_toStartOf="parent"
             android:id="@+id/shapeableImg_court"
             app:layout_constraintTop_toTopOf="parent"
             app:shapeAppearanceOverlay="@style/roundedImageView"
             app:strokeColor="#0362C1"
             app:strokeWidth="1dp"
             android:scaleType="centerCrop" />
             -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toEndOf="@id/shapeableImg_court"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/childConstrain_layout">

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/name_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textSize="19sp"
            android:lineHeight="25dp"
            android:id="@+id/product_nameCourt"
            android:text="Nike Air "
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </ScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="22dp"
                android:layout_marginTop="5dp"
                android:id="@+id/todelete_icon"
                android:src="@drawable/ic_baseline_delete_outline_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_container"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                tools:backgroundTint="@color/burntRed"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="3dp"
                android:id="@+id/color_col" />
            <!--
               android:background="@drawable/round_borders"
              -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name_container"
                app:layout_constraintStart_toEndOf="@id/color_col"
                android:layout_marginLeft="9dp"
                tools:text="Orange | size:40"
                android:textSize="17sp"
                android:id="@+id/size_color_txt_cort" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/minusBtn"
                android:layout_margin="12dp"
                android:text="EGP 3,200"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/price"
                android:textColor="@color/blue" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_baseline_add_24"
                app:backgroundTint="@color/blue"
                app:tint="@color/white"
                android:foregroundGravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/minusBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/addBtn"
                android:layout_marginRight="35dp"
                app:backgroundTint="@color/blue"
                app:tint="@color/white"
                android:foregroundGravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/detailed_quantity"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@id/addBtn"
                app:layout_constraintStart_toStartOf="@id/minusBtn"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toTopOf="@id/addBtn"
                app:layout_constraintBottom_toBottomOf="@id/addBtn"
                android:background="@drawable/rounded_colored_borders"
                android:gravity="center"
                android:backgroundTint="#E6013A73" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>